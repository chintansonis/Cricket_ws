<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/_8sdp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llRowDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_pic_add_invite"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/profile_icon_conatct" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.cricket.cricketchallenge.custom.TfTextView
                android:id="@+id/tv_name_add_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:text="Name"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_12ssp" />

            <com.cricket.cricketchallenge.custom.TfTextView
                android:id="@+id/tv_no_add_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:text="+65 456783777"
                android:textColor="@color/light_purple"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right_icon_add_invite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_right_icon_add_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/add_icon_contact"
                android:tint="@color/colorPrimaryDark" />
        </LinearLayout>

    </LinearLayout>

    <com.cricket.cricketchallenge.custom.TfTextView
        android:id="@+id/tvRowNoPrev"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="No Preview"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/_14ssp"
        android:visibility="gone" />


</LinearLayout>