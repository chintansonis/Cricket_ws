<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main_join"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center|left">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_6sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_back"
                android:tint="@color/colorPrimaryDark" />

        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/cricketlogo" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.cricket.cricketchallenge.custom.MyEditText
                        android:id="@+id/et_fname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:hint="First Name"
                        android:imeOptions="actionNext"
                        android:background="@drawable/edt_bg"
                        android:inputType="textCapSentences"
                        android:maxLength="50"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textColorHint="@color/dark_gray"
                        android:textSize="@dimen/_12ssp" />

                    <com.cricket.cricketchallenge.custom.MyEditText
                        android:id="@+id/et_lname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:hint="Last Name"
                        android:background="@drawable/edt_bg"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:maxLength="50"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textColorHint="@color/dark_gray"
                        android:textSize="@dimen/_12ssp" />

                    <com.cricket.cricketchallenge.custom.MyEditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/edt_bg"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:hint="Email Address"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLength="40"
                        android:padding="@dimen/_10sdp"
                        android:textColorHint="@color/dark_gray"
                        android:textSize="@dimen/_12ssp" />

                    <com.cricket.cricketchallenge.custom.MyEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:background="@drawable/edt_bg"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:hint="Password"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLength="10"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textColorHint="@color/dark_gray"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/et_country_name"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:gravity="center"
                            android:background="@drawable/edt_bg"
                            android:padding="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="INDIA      IN"
                            android:textColorHint="@color/dark_gray"
                            android:textSize="@dimen/_12ssp" />

                        <EditText
                            android:id="@+id/et_phone_no"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_weight="1"
                            android:hint="Mobile Number"
                            android:imeOptions="actionDone"
                            android:background="@drawable/edt_bg"
                            android:inputType="number"
                            android:maxLength="10"
                            android:padding="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColorHint="@color/dark_gray"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <com.cricket.cricketchallenge.custom.TfTextView
                        android:id="@+id/tv_continue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/shadow_btn"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="Continue"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center|bottom"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <com.cricket.cricketchallenge.custom.TfTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="By pressing 'Continue' you agree with the "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.cricket.cricketchallenge.custom.TfTextView
                                android:id="@+id/tvTermsService"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="Terms of Services"
                                android:textAllCaps="false"
                                android:textColor="@color/light_color_primary"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold"
                                app:ftype="bold" />

                            <com.cricket.cricketchallenge.custom.TfTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="  and  "
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />

                            <com.cricket.cricketchallenge.custom.TfTextView
                                android:id="@+id/tvPrivacyPolicy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="Privacy Policy"
                                android:textAllCaps="false"
                                android:textColor="@color/light_color_primary"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold"
                                app:ftype="bold" />

                            <com.cricket.cricketchallenge.custom.TfTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=" as "
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>

                        <com.cricket.cricketchallenge.custom.TfTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="set by CricketChallenge"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />


                    </LinearLayout>

                    <com.cricket.cricketchallenge.custom.TfTextView
                        android:id="@+id/tv_already_have_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:gravity="center|bottom"
                        android:text="Already have an account?"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>